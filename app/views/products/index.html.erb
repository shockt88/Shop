<h1>Product Catalog</h1>

<h3><%= notice %></h3>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Brand</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= link_to product.name, product_url(product.id) %></td>
    <td><%= number_to_currency product.price %></td>
    <td><%= link_to product.brand.name, brand_url(product.brand) %></td>
    <td><%= button_to "Add to Cart", cart_items_url(:product_id => product.id) %></td>
    
  </tr>
<% end %>
</table>

<br />

<% if administrator? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>






